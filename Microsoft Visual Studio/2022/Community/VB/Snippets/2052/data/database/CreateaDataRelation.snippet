<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>创建 DataRelation</Title>
      <Author>Microsoft Corporation</Author>
      <Description>在数据集中的两个数据表之间创建数据关系。</Description>
      <Shortcut>adoAddRelation</Shortcut>
    </Header>
    <Snippet>
      <References>
        <Reference>
          <Assembly>System.Xml.dll</Assembly>
        </Reference>
        <Reference>
          <Assembly>System.Data.dll</Assembly>
        </Reference>
      </References>
      <Imports>
        <Import>
          <Namespace>System.Data</Namespace>
        </Import>
      </Imports>
      <Declarations>
        <Literal>
          <ID>RelationName</ID>
          <Type>String</Type>
          <ToolTip>替换为关系的名称。</ToolTip>
          <Default>"CustomersOrders"</Default>
        </Literal>
        <Literal>
          <ID>ColumnName</ID>
          <Type>String</Type>
          <ToolTip>替换为列名称。</ToolTip>
          <Default>"CustomerID"</Default>
        </Literal>
        <Object>
          <ID>DataSet</ID>
          <Type>System.Data.DataSet</Type>
          <ToolTip>替换为数据集对象。</ToolTip>
          <Default>ds</Default>
        </Object>
        <Object>
          <ID>relationObjectName</ID>
          <Type>System.Data.DataRelation</Type>
          <ToolTip>关系的对象名称</ToolTip>
          <Default>customersOrdersRelation</Default>
        </Object>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[Dim $relationObjectName$ As New DataRelation($RelationName$, _
		$DataSet$.Customers.Columns($ColumnName$), _
		$DataSet$.Orders.Columns($ColumnName$))

$DataSet$.Relations.Add($relationObjectName$)
]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
