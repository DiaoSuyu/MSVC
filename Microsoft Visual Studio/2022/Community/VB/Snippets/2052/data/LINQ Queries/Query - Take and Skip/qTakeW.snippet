<?xml version="1.0"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Take While</Title>
      <Author>Microsoft Corporation</Author>
      <Description>特定条件为真时获取的查询。</Description>
      <Shortcut>qTakeW</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>queryResult</ID>
          <Type>item</Type>
          <ToolTip>替换为查询的标识符。</ToolTip>
          <Default>query</Default>
        </Literal>
        <Literal>
          <ID>item</ID>
          <Type>item</Type>
          <ToolTip>替换为表示数据源项的变量的标识符。</ToolTip>
          <Default>fruit</Default>
        </Literal>
        <Literal>
          <ID>dataSource</ID>
          <Type>String</Type>
          <ToolTip>替换为数据源的标识符。</ToolTip>
          <Default>New String() {"apple", "orange", "pear", "banana", "strawberry", "blueberry"}</Default>
        </Literal>
        <Literal>
          <ID>orderField</ID>
          <Type>String</Type>
          <ToolTip>替换为依据其对查询排序的字段。</ToolTip>
          <Default>ToUpper()</Default>
        </Literal>
        <Literal>
          <ID>orderDirection</ID>
          <Type>String</Type>
          <ToolTip>替换为字段排序的方向(升序/降序)。</ToolTip>
          <Default>Descending</Default>
        </Literal>
        <Literal>
          <ID>takeField</ID>
          <Type>Integer</Type>
          <ToolTip>替换为用于确定何时停止获取的字段。</ToolTip>
          <Default>Length</Default>
        </Literal>
        <Literal>
          <ID>takeCondition</ID>
          <Type>Integer</Type>
          <ToolTip>替换为用于确定何时停止获取的条件。</ToolTip>
          <Default>&gt; 5</Default>
        </Literal>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[Dim $queryResult$ = From $item$ In $dataSource$ _
                    Order By $item$.$orderField$ $orderDirection$ _
                    take While $item$.$takeField$ $takeCondition$]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
