<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>使用 AutoSize 动态调整按钮大小</Title>
      <Author>Microsoft Corporation</Author>
      <Description>使用 AutoSize 将按钮大小动态调整为按钮文本的长度。</Description>
      <Shortcut>butAutoSize</Shortcut>
    </Header>
    <Snippet>
		<References>
			<Reference>
				<Assembly>System.Drawing.dll</Assembly>
				<Url/>
			</Reference>
			<Reference>
				<Assembly>System.Windows.Forms.dll</Assembly>
				<Url/>
			</Reference>
		</References>
		<Imports>
			<Import>
				<Namespace>System</Namespace>
			</Import>
			<Import>
				<Namespace>System.Drawing</Namespace>
			</Import>
			<Import>
				<Namespace>Microsoft.VisualBasic</Namespace>
			</Import>
		</Imports>
		<Declarations>
        <Object>
          <ID>buttonName</ID>
          <Type>Button</Type>
          <ToolTip>替换为窗体上的按钮。</ToolTip>
          <Default>Button1</Default>
        </Object>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[$buttonName$.AutoSize = True
]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
