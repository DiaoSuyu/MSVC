<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>确定文件是否存在</Title>
      <Author>Microsoft Corporation</Author>
      <Description>设置一个布尔变量，用于指示指定文件是否存在。</Description>
      <Shortcut>filExistFile</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>filename</ID>
          <ToolTip>替换为文件的名称。</ToolTip>
          <Default>"C:\Test.txt"</Default>
        </Literal>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[Dim fileExists As Boolean 
fileExists = My.Computer.FileSystem.FileExists($filename$)]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
