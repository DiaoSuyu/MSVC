<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>查看可用磁盘空间量</Title>
      <Author>Microsoft Corporation</Author>
      <Description>返回指定驱动器上的可用磁盘空间量。</Description>
      <Shortcut>sysSpace</Shortcut>
    </Header>
    <Snippet>
      <Imports>
        <Import>
          <Namespace>System</Namespace>
        </Import>
        <Import>
          <Namespace>Microsoft.VisualBasic</Namespace>
        </Import>
      </Imports>
      <Declarations>
        <Literal>
          <ID>DriveLetter</ID>
          <Type>String</Type>
          <ToolTip>替换为要查询的驱动器号。</ToolTip>
          <Default>"C:\"</Default>
        </Literal>
      </Declarations>
      <Code Language="VB" Kind="method body"><![CDATA[Dim drive = My.Computer.FileSystem.GetDriveInfo($DriveLetter$)
Dim space = drive.AvailableFreeSpace]]></Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
